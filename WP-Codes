/* or use the below code for Non-Elementor Sites */

function disable_google_fonts() {
	return false;
}
add_filter( 'print_google_fonts', 'disable_google_fonts' );

/* Ensure Webfont is Loaded (Elementor and separate code for Non-Elementor) */

